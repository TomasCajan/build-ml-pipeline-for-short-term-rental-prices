name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Actual input artifact name
        type: string

      output_artifact:
        description: Actual output artifact name
        type: string

      output_type:
        description: General output artifact state
        type: string

      output_description:
        description: Detailed output artifact state
        type: string

      min_price:
        description: Minimum price value
        type: float

      max_price:
        description: Maximum price value
        type: float


    command: >
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
